<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:output method="html" encoding="UTF-8"/>

  <xsl:template match="/rss">
    <html>
      <head>
        <title>Noticias de Tecnolog√≠a</title>
        <style>
          body { font-family: Arial; margin: 2em; background: #f4f4f4; color: #333; }
          h1 { color: #0057b8; }
          .item { background: white; border-radius: 10px; padding: 1em; margin: 1em 0; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
          .item h2 { margin: 0; }
          .item p { margin: 0.5em 0 0; }
          .date { font-size: 0.9em; color: gray; }
        </style>
      </head>
      <body>
        <h1><xsl:value-of select="channel/title"/></h1>
        <p><xsl:value-of select="channel/description"/></p>
        <xsl:for-each select="channel/item">
          <div class="item">
            <h2><a href="{link}"><xsl:value-of select="title"/></a></h2>
            <p class="date"><xsl:value-of select="pubDate"/></p>
            <p><xsl:value-of select="description"/></p>
          </div>
        </xsl:for-each>
      </body>
    </html>
  </xsl:template>
</xsl:stylesheet>
